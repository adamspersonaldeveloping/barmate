<%- include('partials/header') -%>
  <div class="container">
    <div class="row justify-content-center mt-5">
       
      <a href="<%= posts[posts.length-1].cocktailName.charCodeAt(0) > 100 ? '/feedZtoA' : '/feed'%>" class="btn btn-outline-info btn-lg px-4 me-sm-3 fw-bold"><%= posts[posts.length-1].cocktailName.charCodeAt(0) > 100 ? 'List Z - A' : 'List A - Z'%></a>
     
     
      <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          
          <li class="col-6 justify-content-between mt-5">
            <h1 class="text-white justify-content-center"><%= posts[i].cocktailName %></h1>
            <a href="/post/<%= posts[i]._id%>">
              <img class="img-fluid" src="<%= posts[i].image%>">
            </a>
            
            <%if(!user.favorites.includes(posts[i]._id)){ %>
              <form
          class="row justify-content-center mt-3"
          action="/post/favoritePost/<%= posts[i]._id %>?_method=PUT"
          method="POST"
        >
              <button class="btn btn-outline-info fa fa-heart" type="submit"></button>
            </form>
               <%}%>
               <%if(user.favorites.includes(posts[i]._id)){ %>
                <form
              class="row justify-content-center mt-3"
              action="/post/deleteFavorite/<%= posts[i]._id %>?_method=PUT"
              method="POST"
            >
              <button class="btn btn-info fa fa-heart" type="submit"></button>
            </form>
            <%}%>
          </li>
        
        <% } %>
        </ul>
    </div>
  </div>  
<%- include('partials/footer') -%>