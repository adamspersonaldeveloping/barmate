<%- include('partials/header') -%>
  <div class="container">
    <div class="row justify-content-center mt-5">
      
       
      <a href="<%= posts[posts.length-1].cocktailName.charCodeAt(0) > 100 ? '/feedZtoA' : '/feed'%>" class="btn btn-outline-info btn-lg px-4 me-sm-3 fw-bold"><%= posts[posts.length-1].cocktailName.charCodeAt(0) > 100 ? 'List Z - A' : 'List A - Z'%></a>
      <a href="<%= [...posts].map(e=>e.ibaCocktail).includes(false) ? '/feedIBA' : '/feed'%>" class="btn col-6 btn-outline-info btn-lg px-4 me-sm-3 fw-bold"><%= [...posts].map(e=>e.ibaCocktail).includes(false) ? 'IBA Cocktails only' : 'All Cocktails'%></a>
      <a href="<%= posts.filter(e=>e.ibaCocktail == false).length >= 1 ? '/feedNoIBA' : '/feed'%>" class="btn col-6 btn-outline-info btn-lg px-4 me-sm-3 fw-bold"><%= posts.filter(e=>e.ibaCocktail == false).length >=1 ? 'Remove IBA Cocktails' : 'All Cocktails'%></a>
      
     
      <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          
          <li class="col-6 justify-content-between mt-5">
            <a class="text-decoration-none" href="/post/<%= posts[i]._id%>">
              <h1 class="text-white justify-content-center"><%= posts[i].cocktailName %></h1>
              <img class="img-fluid" src="<%= posts[i].image%>">
            </a>
            <%if(user == undefined){ %>

            <a href="/login"><button class="btn btn-info fa fa-heart" >Sign in to favorite this recipe</button></a>
          
          <%}else if(!user.favorites.includes(posts[i]._id)){ %>
              <form
          class="row justify-content-center mt-3"
          action="/post/favoritePost/<%= posts[i]._id %>?_method=PUT"
          method="POST"
        >
              <button class="btn btn-outline-info fa fa-heart" type="submit"></button>
            </form>
               <%}else{ %>
                <form
              class="row justify-content-center mt-3"
              action="/post/deleteFavorite/<%= posts[i]._id %>?_method=PUT"
              method="POST"
            >
              <button class="btn btn-info fa fa-heart" type="submit"></button>
            </form>
            <%}%>
            
          </li>
        
        <% } %>
        </ul>
    </div>
  </div>  
<%- include('partials/footer') -%>